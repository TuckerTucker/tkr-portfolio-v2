{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "DISABLE_PROMPT_CACHING": "0",
    "MCP_TIMEOUT": "30000",
    "OTEL_METRIC_EXPORT_INTERVAL": "10000",
    "NODE_ENV": "development"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(git:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(poetry:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(kubectl:*)",
      "Bash(terraform:*)",
      "Bash(make:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(cat:*)",
      "Bash(test:*)",
      "Edit",
      "Find",
      "Create",
      "Read",
      "Write",
      "Replace",
      "Delete",
      "Grep",
      "Glob",
      "LS",
      "WebFetch",
      "GitCommit",
      "GitPush",
      "TaskOutput",
      "KillTask",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(search:*)",
      "Search(pattern:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(node:*)",
      "mcp__context-kit__get_stats",
      "mcp__context-kit__create_entity",
      "mcp__context-kit__create_relation",
      "mcp__context-kit__search_entities",
      "mcp__context-kit__query",
      "mcp__context-kit__run_script",
      "mcp__context-kit__list_available_scripts",
      "mcp__context-kit__check_ports",
      "mcp__context-kit__start_dev_server",
      "mcp__context-kit__build_ui",
      "mcp__context-kit__run_tests",
      "mcp__context-kit__stop_services",
      "mcp__context-kit__service_status",
      "mcp__tkr-context-kit__get_stats",
      "mcp__tkr-context-kit__search_entities",
      "mcp__tkr-context-kit__create_entity",
      "mcp__tkr-context-kit__create_relation",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(chmod:*)",
      "Bash(.context-kit/scripts/stop-all:*)",
      "Bash(touch:*)",
      "Bash(tsx:*)",
      "Bash(npx tsx:*)",
      "Bash(claude mcp:*)",
      "Bash(gtimeout:*)",
      "Bash(.context-kit/scripts/start-all:*)",
      "Bash(sqlite3:*)",
      "Bash(curl -s http://localhost:42003/stats)",
      "Bash(curl -s -X POST http://localhost:42003/analyze-project -H \"Content-Type: application/json\" -d '{\"\"\"\"patterns\"\"\"\": [\"\"\"\"**/*.tsx\"\"\"\", \"\"\"\"**/*.ts\"\"\"\"], \"\"\"\"includeTests\"\"\"\": false}')",
      "Bash(source:*)",
      "Bash(get_project_paths)",
      "Bash(debug_paths)",
      "Bash(timeout 5s claude mcp list:*)",
      "mcp__ide__getDiagnostics",
      "Bash(curl:*)",
      "Bash(.context-kit/scripts/setup-context-kit-mcp:*)",
      "Bash(python3:*)",
      "Bash(.context-kit/logging-client/installation-scripts/detect-build-tool.sh:*)",
      "Bash(.context-kit/logging-client/setup-logging.sh:*)",
      "Bash(npx eslint:*)",
      "Read(//private/tmp/**)",
      "Bash(npx license-checker:*)",
      "Bash(npx tsc:*)",
      "Bash(npx tailwindcss:*)",
      "Bash(rm:*)",
      "Bash(npx shadcn@latest add:*)",
      "Bash(timeout 10s npm run dev:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo rm:*)",
      "Bash(format:*)",
      "Bash(dd:*)",
      "Edit(/etc/**)",
      "Edit(/usr/**)",
      "Edit(~/.ssh/**)"
    ]
  },
  "defaultMode": "acceptEdits",
  "additionalDirectories": [
    ".context-kit"
  ]
}

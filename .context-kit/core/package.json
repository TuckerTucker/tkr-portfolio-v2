  "description": "Core unified library for tkr-context-kit v2.0 - Database, Knowledge Graph, Search, and Logging",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./database": "./dist/database/index.js",
    "./knowledge-graph": "./dist/knowledge-graph/index.js",
    "./search": "./dist/search/index.js",
    "./logging": "./dist/logging/index.js",
    "./config": "./dist/config/index.js"

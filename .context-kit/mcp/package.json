{
  "name": "@tkr-context-kit/mcp",
  "version": "0.1.0",
  "description": "Consolidated MCP server for tkr-context-kit with knowledge graph and script execution",
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts --stdio",
    "start": "tsx src/server.ts --stdio",
    "mcp-server": "tsx src/server.ts --stdio",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@tkr-context-kit/core": "file:../core",
    "glob": "^11.0.3",
    "typescript": ">=4.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "context-kit-mcp": "./dist/server.js"
  },
  "keywords": [
    "mcp",
    "context-kit",
    "knowledge-graph",
    "script-execution",
    "development-tools",
    "ai-assisted"
  ],
  "author": "TKR Project Kit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tkr-projects/tkr-context-kit.git",
    "directory": ".context-kit/mcp"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
